<% content_for :backdrop do %>
  <div class="backdrop big img-phantoms">
    <div class="overlay">
      <div>
        <h1>The Phantoms</h1>
        <h2>Georgetown University's Premier Co-Ed A Cappella Group</h2>
        <div class="links">
          <%= link_to '<i class="fa fa-chevron-right"></i> Our Music'.html_safe, songs_path %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="blog-container">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="image">
        <%= image_tag post.image_url, width: '400px' %>
      </div>
      <div class="content">
        <h1><%= post.title %></h1>
        <div class="fadeout">
          <p><%= post.content %></p>
        </div>
        <span><%= link_to '<i class="fa fa-chevron-right"></i> Read More'.html_safe, post %></span>
      </div>
    </div>
  <% end %>
</div>

<% content_for :aside do %>
  <% if current_user %>
    <%= link_to 'New Post', new_post_path %>
  <% end %>
<% end %>
