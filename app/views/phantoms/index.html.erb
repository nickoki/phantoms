<% content_for :backdrop do %>
  <div class="backdrop img-phantoms">
    <div class="overlay">
    </div>
  </div>
<% end %>

<h1>Meet the Group!</h1>

<div class="card-container">
  <% @phantoms.each do |phantom| %>
    <div class="card">
      <%= image_tag phantom.image_url, width: '240px', height: '240px' %>
      <div class="info">
        <h2><%= phantom.first_name %></h2>
        <h3><%= phantom.voice_part %> â€¢ Class of <%= phantom.end_date.year %></h3>
        <span><%= link_to '<i class="fa fa-chevron-right"></i> View'.html_safe, phantom %></span>
      </div>
    </div>
  <% end %>
</div>
