<!DOCTYPE html>
<html>
  <head>
    <title>Phantoms</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="hg">
    <div class="super-nav">
      <span></span>
      <span id="notice"><%= notice %></span>
      <span>
        <% if current_user %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
          <%= current_user.email %>
        <% else %>
          <%= link_to "Phantoms Log In", new_user_session_path %>
        <% end %>
      </span>
    </div>
    <header>
      <div class="logo">Phantoms</div>
      <div class="header-right">
        <%= link_to "Home", "/" %>
        <%= link_to "News", "#" %>
        <%= link_to "Repertoire", songs_path %>
        <%= link_to "Members", phantoms_path %>
        <%= link_to "About Us", "#" %>
        <%= link_to "Contact", "#" %>
      </div>
    </header>

    <div class="hg-body">
      <main class="hg-content">
        <%= yield %>
      </main>

      <nav class="hg-nav"></nav>

      <aside class="hg-ads">
        <%= link_to "Auditions", "#" %>
      </aside>
    </div>

    <footer>
      <div class="col-3">
        <h3>The Georgetown Phantoms</h3>
        <%= link_to "News", "#" %>
        <%= link_to "Repertoire", songs_path %>
        <%= link_to "Members", "#" %>
        <%= link_to "About Us", "#" %>
        <%= link_to "Contact", "#" %>
        <%= link_to "Auditions", "#" %>
      </div>

      <div class="col-3">

      </div>

      <div class="col-3">
        <%= link_to "Sign Up", new_user_registration_path %>
      </div>
    </footer>
  </body>
</html>
